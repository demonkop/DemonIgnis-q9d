-- GUI Utama
local ScreenGui = Instance.new("ScreenGui", game.Players.LocalPlayer:WaitForChild("PlayerGui"))
ScreenGui.Name = "UltimateTinyButtonHub"
local UIS = game:GetService("UserInputService")

-- Fungsi Drag
local function makeDraggable(button)
	local dragging, offset
	button.InputBegan:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 then
			dragging = true
			offset = input.Position - button.AbsolutePosition
		end
	end)
	UIS.InputEnded:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 then
			dragging = false
		end
	end)
	UIS.InputChanged:Connect(function(input)
		if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
			button.Position = UDim2.new(0, input.Position.X - offset.X, 0, input.Position.Y - offset.Y)
		end
	end)
end

-- Fungsi Button
local function createButton(name, color, textColor, position, action)
	local button = Instance.new("TextButton")
	button.Text = name
	button.Size = UDim2.new(0, 90, 0, 14)
	button.Position = position
	button.BackgroundColor3 = color
	button.TextColor3 = textColor
	button.TextSize = 10
	button.BorderSizePixel = 0
	button.AutoButtonColor = true
	button.Font = Enum.Font.SourceSansBold
	button.Parent = ScreenGui
	makeDraggable(button)
	button.MouseButton1Click:Connect(action)
	return button
end

-- Fungsi Teks Kecil
local function createLabel(text, color, position)
	local label = Instance.new("TextLabel")
	label.Text = text
	label.Size = UDim2.new(0, 90, 0, 12)
	label.Position = position
	label.BackgroundTransparency = 1
	label.TextColor3 = color
	label.TextSize = 10
	label.Font = Enum.Font.SourceSans
	label.TextXAlignment = Enum.TextXAlignment.Center
	label.Parent = ScreenGui
end

-- Util Fungsi
local function runLooped(delayTime, func)
	coroutine.wrap(function()
		while true do
			func()
			wait(delayTime)
		end
	end)()
end

local function runTogether(times, func)
	for _ = 1, times do
		coroutine.wrap(func)()
	end
end

-- Button Positions
local rightStartY = 10
local leftStartY = 10
local gap = 15
local rightX = UDim2.new(1, -100, 0, rightStartY)
local leftX = UDim2.new(0, 10, 0, leftStartY)

-- POJOK KANAN ATAS

-- Immortallity
createButton("Immortallity", Color3.fromRGB(0,0,0), Color3.fromRGB(255,0,0), rightX, function()
	runLooped(10, function()
		local args = {"Beserk", "Haku", Vector3.new(1117.373, 180.99, -38.243)}
		game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("Skill"):FireServer(unpack(args))
	end)
end)

-- Absolute Blow
rightX = rightX + UDim2.new(0, 0, 0, gap)
createButton("Absolute Blow", Color3.fromRGB(0,0,255), Color3.fromRGB(255,0,0), rightX, function()
	local args1 = {"Darknight", "ChantDarkSlash"}
	local args2 = {"Beserk", "BeserkSlam"}
	local event = game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("Skill")
	event:FireServer(unpack(args1))
	event:FireServer(unpack(args2))
end)

-- God Of Liberation Mode
