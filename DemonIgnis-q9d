	local ev = game:GetService("ReplicatedStorage"):WaitForChild("Events")
	local args1 = {"Beserk", "Gear5", Vector3.new(1117.296875, 182.7184, -35.9082)}
	local args2 = {}
	runTogether(2, function() ev.Skill:FireServer(unpack(args1)) end)
	runTogether(2, function() ev.Baryon:FireServer() end)
end)

